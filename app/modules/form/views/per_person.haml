.row
  .page-header
    %h2 Service

.row
  .col-md-5
    .row
      .panel.panel-default{ng-show:"person"}
        .panel-heading Form
        .panel-body
          {{person.CID}} {{person.FirstName}} {{person.LastName}}
          %ol
            %li{ng-repeat:"form in system.forms"}
              %a{ng-click:"selectForm(form)"}
                {{form.FDesc}}
              %ul
                %li{ng-repeat:"questiontype in form.questiontypes"}
                  %a{ng-click:"selectQuestiontype(questiontype)"}
                    {{questiontype.QTDesc}}
  .col-md-7
    .panel.panel-default{ng-show:"person"}
      .panel-heading {{form.FDesc}}
      .panel-body
        %p {{questiontype.QTDesc}}
        %ol
          %li{ng-repeat:"qtimestamp in questiontype.qtimestamps"}
            %a{ng-click:"selectQtimestamp(qtimestamp)"}
              {{qtimestamp.RecordDate|date:"dd-MM-yyyy"}}
            %pre {{qtimestamp.id}}

          %li{ng-show:"questiontype && person"}
            %a{ng-click:"createQtimestamp()"} 
              Create QTimestamp
        
        %pagination{total-items:"questiontype.questionaires.length",class:"pagination-sm",ng-model:"currentQuestion",max-size:"10",items-per-page:"1"}
        %pre Question no: {{currentQuestion}}/{{questiontype.questionaires.length}}
        .form-group
          %label
            {{c_question.QDesc}}
            
          %span{ng-if:"c_question.IUControl == '20030'"} 
            %div.radio{ng-repeat:"answer in c_question.answers"} 
              %label
                != '<input type="radio" ng-model="c_question.qrecord.answerId" ng-value="answer.answer.id"> {{answer.answer.ADesc}}'

          %span{ng-if:"c_question.IUControl != '20030'"} 
            %ol
              %li{ng-repeat:"answer in c_question.answers"}
                %span{ng-if:"answer.selected"} 
                  %p.bg-success {{answer.answer.ADesc}}
                %span{ng-if:"!answer.selected"} 
                  {{answer.answer.ADesc}}

